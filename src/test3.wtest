import musicos3.*

describe "tests modificados"{
	var cisne = new Cancion(312, "Cisne", "Hoy el viento se abrió quedó vacío el aire una vez más y el manantial brotó y nadie está aquí y puedo ver que solo estallan las hojas al brillar")
	var almaD = new Cancion(216, "Alma de Diamante", "Ven a mí con tu dulce luz alma de diamante. Y aunque el sol se nuble después sos alma de diamante. Cielo o piel silencio o verdad sos alma de diamante. Por eso ven así con la humanidad alma de diamante")
	var crisantemo = new Cancion(175, "Crisantemo", "Tócame junto a esta pared, yo quede por aquí... cuando no hubo más luz... quiero mirar a través de mi piel... Crisantemo, que se abrió... encuentra el camino hacia el cielo")
	var laFamilia = new Cancion(264, "La Familia", "Quiero brindar por mi gente sencilla, por el amor brindo por la familia")
	var eres = new Cancion(145, "Eres", "Eres lo mejor que me pasó en la vida, no tengo duda, no habrá más nada después de ti. Eres lo que le dio brillo al día a día, y así será por siempre, no cambiará, hasta el final de mis días.")
	var corazonA = new Cancion(154, "Corazon Americano", "Canta corazón, canta más alto, que tu pena al fin se va marchando, el nuevo milenio ha de encontrarnos, junto corazón, como soñamos.")
	var rmxLF = laFamilia.remixar()
	var mshAlmaCris

	var albLF = new Album("Especial La Familia", new Date(17,06,1992), 100000, 89000, [laFamilia])
	var albLS = new Album("La Sole", new Date(04,02,2005), 200000, 130000, [eres, corazonA])
	var albPLA = new Album("Para los árboles", new Date(31,03,2003), 50000, 49000, [cisne, almaD])
	var albJC = new Album("Just Crisantemo", new Date(05,12,2007), 50000, 49000, [crisantemo])
	
	var soledad = new VocalistaPopular(55, true, [albLS], "amor")
		
	fixture{
		luisAlberto.lanzarAlbum(albPLA)
		joaquin.lanzarAlbum(albLF)
		luisAlberto.lanzarAlbum(albJC)
		//rmxLF = laFamilia.remixar()
		mshAlmaCris = almaD.mashupear(crisantemo)
	}	
	
	test "Queremos saber si Joaquín canta bien la canción “La Familia”"{
		assert.that(joaquin.leSale(laFamilia))
	}
	test "Queremos saber si Joaquín canta bien la canción “cisne”"{
		assert.that(joaquin.leSale(cisne))
	}
	test "Queremos saber si lucia canta bien la canción “laFamilia”"{
		assert.that(lucia.leSale(laFamilia))
	}
	test "Queremos saber si lucia canta bien la canción “cisne” como solista"{
		lucia.hacerseSolista(true)
		assert.that(lucia.leSale(cisne))
	}
	test "Queremos saber si lucia canta bien la canción “cisne” en grupo"{
		lucia.hacerseSolista(false)
		assert.notThat(lucia.leSale(cisne))
	}
	test "Queremos saber si Luis Alberto interpreta bien la canción 'Cisne'" {
		assert.that(luisAlberto.leSale(cisne))
	}

	test "Saber cuál es la canción más larga del álbum “Especial La Familia”, teniendo en cuenta la duración"{
		assert.equals(laFamilia, albLF.getMasTiempo())
	}
	test "Saber cuál es la canción más larga del álbum “La Sole”, teniendo en cuenta la duración"{
		assert.equals(corazonA, albLS.getMasTiempo())
	}
	test "Saber cuánto dura el remix de “La Familia” "{
		assert.equals(792, rmxLF.dura())
	}
	test "Saber cuál es la letra del remix de “La Familia”"{
		assert.equals("mueve tu cuelpo baby Quiero brindar por mi gente sencilla, por el amor brindo por la familia yeah oh yeah", rmxLF.letra())
	}
	test "Saber cuál es la duración del mashup de “Alma de Diamante” y  “Crisantemo” "{
		assert.equals(216, mshAlmaCris.dura())	
	}
	test "Saber cuál es la letra del mashup de “Alma de Diamante” y  “Crisantemo” "{
		assert.equals("Ven a mí con tu dulce luz alma de diamante. Y aunque el sol se nuble después sos alma de diamante. Cielo o piel silencio o verdad sos alma de diamante. Por eso ven así con la humanidad alma de diamante Tócame junto a esta pared, yo quede por aquí... cuando no hubo más luz... quiero mirar a través de mi piel... Crisantemo, que se abrió... encuentra el camino hacia el cielo", mshAlmaCris.letra())	
	}
	test "Intentar agregar al recital Pdpalooza a Luis Alberto"{
		pdpalooza.agregarArtista(luisAlberto)
		assert.equals(pdpalooza.quienes().contains(luisAlberto))
	}
	test "Intentar agregar al recital Pdpalooza a joaquin como solista"{
		assert.throwsException(new Exception({pdpalooza.agregarArtista(joaquin)}))
	}
	test "Subir la habilidad (base) de Lucía a 90. Intentar agregar al recital Pdpalooza a Lucía como solista"{
		lucia.setHabilidad(90)
		assert.throwsException(new Exception({pdpalooza.agregarArtista(lucia)}))	
	}
	test "Subir la habilidad (base) de soledad a 90. Intentar agregar al recital Pdpalooza a soledad"{
		soledad.setHabilidad(90)
		console.println(soledad)
		pdpalooza.agregarArtista(soledad)
		console.println(pdpalooza.quienes())
		assert.that(pdpalooza.quienes().contains(soledad))
	}
}
